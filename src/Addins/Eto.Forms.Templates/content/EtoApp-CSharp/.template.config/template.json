{
	"$schema": "http://json.schemastore.org/template",
	"author": "Curtis Wensley",
	"classifications": [ "Cross Platform", "Eto" ],
	"name": "Eto App",
	"identity": "Eto.App.CSharp",
	"groupIdentity": "Eto.App",
	"shortName": "etoapp",
	"tags": {
		"language": "C#",
		"type": "project"
	},
	"sourceName": "EtoApp",
	"preferNameDirectory": true,
	"symbols": {
		"Mode": {
			"type": "parameter",
			"description": "Type of UI code",
			"datatype": "choice",
			"defaultValue": "code",
			"choices": [
				{
					"choice": "code",
					"description": "Code only UI"
				},
				{
					"choice": "preview",
					"description": "Partial class with preview"
				},
				{
					"choice": "xaml",
					"description": "Xaml definition with code behind"
				},
				{
					"choice": "json",
					"description": "Json definition with code behind"
				}
			]
		},
		"GtkVersion": {
			"type": "parameter",
			"description": "The Gtk# version to target",
			"dataType": "choice",
			"defaultValue": "Gtk",
			"onlyIf": [
				{ "after": ".Platform." },
				{ "after": ".Platforms." }
			],
			"choices": [
				{
					"choice": "Gtk",
					"description": "Gtk# 3.14+ platform\n              (requires dotnet 2.0 sdk)"
				},
				{
					"choice": "Gtk2",
					"description": "Gtk# 2.12"
				},
				{
					"choice": "Gtk3",
					"description": "GTK# 3.0"
				}
			],
			"replaces": "Gtk"
		},
		"Separate": {
			"type": "parameter",
			"description": "Use separate projects for each platform.\nDefault is to create a single destkop project that\nbuilds for all platforms",
			"dataType": "bool",
			"defaultValue": "false"
		},
		"IncludeSolution": {
			"type": "parameter",
			"description": "Include a .sln file",
			"dataType": "bool",
			"defaultValue": "true"
		},
		"IncludeXamMac": {
			"type": "parameter",
			"description": "Include a Xamarin.Mac project to embed mono when\ncompiling on macOS",
			"dataType": "bool",
			"defaultValue": "false"
		},
		"IncludeWinForms": {
			"type": "parameter",
			"description": "Include Windows Forms as a target.",
			"dataType": "bool",
			"defaultValue": "false"
		},
		"UseCode": {
			"type": "computed",
			"value": "(Mode == \"code\")"
		},
		"UseCodePreview": {
			"type": "computed",
			"value": "(Mode == \"preview\")"
		},
		"UseXeto": {
			"type": "computed",
			"value": "(Mode == \"xaml\")"
		},
		"UseJeto": {
			"type": "computed",
			"value": "(Mode == \"json\")"
		},
	},
	"sources": [
		{
			"modifiers": [
				{
					"condition": "(!IncludeSolution)",
					"exclude": [ "*.sln" ]
				},
				{
					"condition": "(!UseCode && !UseCodePreview)",
					"exclude": [ "**/MainForm.cs" ]
				},
				{
					"condition": "(!UseCodePreview)",
					"exclude": [ "**/*.eto.cs" ]
				},
				{
					"condition": "(!UseXeto)",
					"exclude": [ "**/*.xeto", "**/*.xeto.*" ]
				},
				{
					"condition": "(!UseJeto)",
					"exclude": [ "**/*.jeto", "**/*.jeto.*" ]
				},
				{
					"condition": "(Separate)",
					"exclude": [ "**/EtoApp.Desktop/**/*" ]
				},
				{
					"condition": "(!Separate)",
					"exclude": [
						"**/EtoApp.Gtk/**/*",
						"**/EtoApp.Mac/**/*",
						"**/EtoApp.Wpf/**/*",
					]
				},
				{
					"condition": "(!IncludeWinForms || !Separate)",
					"exclude": [
						"**/EtoApp.WinForms/**/*",
					]
				},
				{
					"condition": "(!IncludeXamMac)",
					"exclude": [
						"**/EtoApp.XamMac/**/*"
					]
				},
			]
		}
	],
	"primaryOutputs": [
		{ "path": "EtoApp/EtoApp.csproj" },
		{
			"path": "EtoApp.Desktop/EtoApp.Desktop.csproj",
			"condition": "(!Separate)"
		},
		{
			"path": "EtoApp.Gtk/EtoApp.Gtk.csproj",
			"condition": "(Separate)"
		},
		{
			"path": "EtoApp.Mac/EtoApp.Mac.csproj",
			"condition": "(Separate)"
		},
		{
			"path": "EtoApp.WinForms/EtoApp.WinForms.csproj",
			"condition": "(Separate)"
		},
		{
			"path": "EtoApp.Wpf/EtoApp.Wpf.csproj",
			"condition": "(Separate)"
		},
		{
			"path": "EtoApp.XamMac/EtoApp.XamMac.csproj",
			"condition": "(!IncludeXamMac)"
		},
		{
			"path": "EtoApp/MainForm.cs",
			"condition": "UseCode"
		},
		{
			"path": "EtoApp/MainForm.eto.cs",
			"condition": "UseCodePreview"
		},
		{
			"path": "EtoApp/MainForm.xeto",
			"condition": "UseXeto"
		},
		{
			"path": "EtoApp/MainForm.jeto",
			"condition": "UseJeto"
		},
	],
	"guids": [
		"4A7EEA91-18CE-4C33-8501-76049670866D",
		"90FC5409-708A-49CC-A80E-2C109E168CB8",
		"F83FE9CE-ACEC-44E7-8C9E-05362F50684E",
		"19712124-C53F-486F-9C88-2BA310B38BE2",
		"05DB20E8-D401-4094-8096-88499C50E28A",
		"BCAAFC40-AA8C-4D5A-8DD9-738E2A339097",
		"7D9523D1-01EC-4E34-A559-03F332E64346"
	]
}